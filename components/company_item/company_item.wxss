/* components/company_item/company_item.wxss */
.item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #dfdfdf;
  background-color: #fff;
}
.item image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
.item .info {
  width: 460rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.item .info view:nth-child(1) {
  color: #333;
  font-size: 32rpx;
}
.item .info view:nth-child(2) {
  color: #666;
  font-size: 28rpx;
}
.line2 {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.line3 {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}