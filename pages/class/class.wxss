.home {
  padding: 10rpx;
}
.catgory-container {
  /* display: flex;
  flex-flow: row wrap;
  justify-content: space-between; */
  overflow: hidden;
}
.catgory-container .catgory-item {
  /* margin-right: 6rpx; */
  width: 180rpx;
  float: left;
  text-align: center;
  padding-bottom: 20rpx;
  position: relative;
}
.catgory-container .catgory-item:nth-child(4n) {
  margin-right: 0;
}
.catgory-container .catgory-item image {
  width: 120rpx;
  height: 120rpx;
}

.catgory-container .catgory-item text {
  text-align: center;
  font-size: 32rpx;
  color: #444;
}

/* 客服 */
.customer {
  position: fixed;
  right: 20rpx;
  bottom: 60rpx;
  width: 80rpx;
  height: 120rpx;
}
.customer view {
  overflow: hidden;
}
.customer image {
  width: 100%;
  float: left;
}
.customer text {
 font-size: 28rpx;
 text-align: center;
 width: 100%;
 display: block;
}
.customer .customer-btn {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}