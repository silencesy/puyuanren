.head-bg {
  background-color: #eee;
  padding: 40rpx 0;
  
}
.head-portrait {
  background-color: #fff;
  padding: 40rpx;
  overflow: hidden;
  border-radius: 16rpx;
}
.head-img {
  width: 120rpx;
  height: 120rpx;
  float: left;
}
.head-img image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}
.name-number {
  color: #444;
  padding-left: 20rpx;
  font-size: 32rpx;
  float: left;
  padding-top: 12rpx;
}
.name-number .name {
  font-size: 38rpx;
}
.name-number .number {
  font-size: 26rpx;
  margin-top: 10rpx;
}
.gender {
  float: right;
  height: 120rpx;
  line-height: 120rpx;
  color: #444;
  font-size: 32rpx;
}
.info {
  padding-left: 20rpx;
  font-size: 32rpx;
  color: #444;
  border-radius: 16rpx;
  overflow: hidden;
}
.info .phone {
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 1rpx solid #dfdfdf;
}
.info .phone image {
  height: 60rpx;
  width: 60rpx;
  margin-top: 30rpx;
  margin-right: 20rpx;
  float: left;
}

.info .phone text {
  font-size: 32rpx;
  float: left;
}
.info .bind-phone {
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 1rpx solid #dfdfdf;
}
.info .bind-phone.kefu-box {
  border-bottom: 0;
}
.info .bind-phone image {
  height: 40rpx;
  width: 40rpx;
  margin-top: 40rpx;
  margin-right: 14rpx;
  float: left;
}
