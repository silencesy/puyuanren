.info .bind-phone text {
  font-size: 26rpx;
  float: right;
  margin-right: 20rpx;
  background-color: #ff6000;
  color: #fff;
  height: 50rpx;
  width: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 50%;
  margin-top: 35rpx;
}
.comment-number {
  float: right;
}
.kefu-box {
  position: relative;
}
.kefu-box button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
  border-width: 0;
  opacity: 0;
}