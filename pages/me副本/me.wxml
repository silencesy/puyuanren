<view class='me' wx:if="{{userInfo}}">
  <view class='head-bg'>
    <view class='head-portrait'>
      <view class='head-img'>
        <image src='{{userInfo.avatar_url}}'></image>
      </view>
      <view class='name-number'>
        <view class='name'>{{userInfo.nick_name}}</view>
        <view wx:if="{{userInfo.mobile}}" class='number' bindtap="bindNumber">{{userInfo.mobile}}</view>
        <view wx:if="{{!userInfo.mobile}}" class='number' bindtap="bindNumber">请绑定手机号</view>
      </view>
      <view class='gender'>性别：{{userInfo.gender}}</view>
    </view>
  </view>
  <view class='info'>
    <view class='bind-phone'>
      <image src='../images/state.jpg'></image>
      <picker bindchange="bindPickerChange2" value="{{index2}}" range="{{array2}}">
        <view class="picker">
          我在上班不：{{array2[index2]}}
        </view>
      </picker>
    </view>
    <view class='bind-phone' bindtap="bindJop">
      <image src='../images/position.jpg'></image>
      <view>
        我干啥的：{{userInfo.job==null?'':userInfo.job}}
      </view>
    </view>
    
    <view class='bind-phone' bindtap="bindCompany">
      <image src='../images/enterprise.jpg'></image>
      <view>
        我在哪上班：{{userInfo.company==null?'':userInfo.company}}
      </view>
    </view>
    <!-- <view class='bind-phone' bindtap="browse">
      <image src='../images/jl.jpg'></image>
      <view>
        浏览记录
      </view>
    </view> -->
    <!-- <view class='bind-phone' bindtap="orderList">
      <image src='../images/jl.jpg'></image>
      <view>
        订单记录
      </view>
    </view> -->
    <view class='bind-phone' bindtap="pay">
      <image src='../images/jl.jpg'></image>
      <view>
        钱花哪里了
      </view>
    </view>
    <view class='bind-phone' bindtap="comment">
      <image src='../images/comment.png'></image>
      <view>
        我吹过的牛
        <text wx:if="{{commentNumber!=0}}">{{commentNumber}}</text>
      </view>
    </view>
    
    <view class='bind-phone' bindtap="dyfunc">
      <image src='../images/jl.jpg'></image>
      <view>
        订阅
      </view>
    </view>
    <view class='bind-phone kefu-box'>
      <image class='kefu-icon' src='../images/kfface.png'></image>
      <view>
        客服小姐姐，她很闲
      </view>
      <button class='customer-btn' open-type="contact"></button>
    </view>
  </view>
  <modal hidden="{{showNumber}}" title="请输入手机号" confirm-text="确定" cancel-text="取消" bindcancel="noNumber" bindconfirm="yesNumber">
    <input bindinput="bindMobileNumber" type='text' cursor-spacing='{{space}}' focus="{{focusphone}}" placeholder="请输入手机号"/>
  </modal>
  <modal hidden="{{showJog}}" title="请输入职业" confirm-text="确定" cancel-text="取消" bindcancel="noJob" bindconfirm="yesJop">
    <input bindinput="bindJopinfo" type='text' cursor-spacing='{{space}}' focus="{{focusjob}}" placeholder="请输入职业"/>
  </modal>
  <modal hidden="{{showCompany}}" title="请输入公司" confirm-text="确定" cancel-text="取消" bindcancel="noCompany" bindconfirm="yesCompany">
    <input bindinput="bindCompanyinfo" type='text' cursor-spacing='{{space}}' focus="{{focuscompany}}" placeholder="请输入公司"/>
  </modal>
</view>