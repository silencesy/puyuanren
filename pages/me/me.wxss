.head-bg {
  background-color: #eee;
  padding: 20rpx 0;
  
}
.head-portrait {
  background-color: #fff;
  padding: 40rpx;
  overflow: hidden;
}
.head-img {
  width: 120rpx;
  height: 120rpx;
  float: left;
}
.head-img image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}
.name-number {
  color: #444;
  padding-left: 20rpx;
  font-size: 32rpx;
  float: left;
  padding-top: 12rpx;
}
.name-number .name {
  font-size: 38rpx;
}
.name-number .number {
  font-size: 26rpx;
  margin-top: 10rpx;
}
.gender {
  float: right;
  height: 120rpx;
  line-height: 120rpx;
  color: #444;
  font-size: 32rpx;
}
.service .title {
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #dfdfdf;
}
.class-box {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  background-color: #fff;
}
.class-box .class-item {
  box-sizing: border-box;
  width: 250rpx;
  text-align: center;
  padding: 30rpx 0;
  position: relative;
}
.class-box .class-item:nth-child(1n) {
  border-right: 1rpx solid #dfdfdf;
  border-bottom: 1rpx solid #dfdfdf;
}
.class-box .class-item:nth-child(2n) {
  border-right: 1rpx solid #dfdfdf;
  border-bottom: 1rpx solid #dfdfdf;
}
.class-box .class-item:nth-child(3n) {
  border-bottom: 1rpx solid #dfdfdf;
}
.class-box .class-item image {
  width: 70rpx;
  height: 70rpx;
}
.class-box .class-item view {
  text-align: center;
  font-size: 26rpx;
  color: #333;
}
.class-box .class-item .number {
  position: absolute;
  right: 30rpx;
  top: -10rpx;
  background-color: #ff6000;
  padding: 0 10rpx;
  color: #fff;
  border-radius: 50%;
}
.class-box .class-item button {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  opacity: 0;
  width: 100%;
  height: 100%;
}