/* home容器 */
.home {
  padding: 150rpx 10rpx 10rpx 10rpx;
}





.scroll-x {
  width: 100%;
  height: 150rpx;
  border-bottom: 1px solid #dfdfdf;
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
}
.scroll-x view {
  height: 150rpx;
  display: inline-block;
  border-bottom: 1px solid transparent;
  flex: 1;
}
.scroll-x view image {
  width: 90rpx;
  height: 90rpx;
  display: block;
  margin: 10rpx auto 0 auto;
}
.scroll-x view view {
  font-size: 30rpx;
  height: 40rpx;
  width: 100%;
  text-align: center;
  color: #e32561;
}
.scroll-x view.active {
  color: #11b90c;
}