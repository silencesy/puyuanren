/* pages/releasecolumn/releasecolumn.wxss */
page {
  padding-top: 100rpx;
  background-color: #eee;
}
.banner {
  width: 100%;
}
.title {
  padding-top: 10rpx;
}
.title image {
  height: 81rpx;
}
.search-row {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999;
}
.article-box {
  margin-top: 100rpx;
}
.swiper-box {
  height: 300rpx;
}
.class-box {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding-top: 40rpx;
  background-color: #fff;
}
.class-box .class-item {
  width: 150rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.class-box .class-item image {
  width: 135rpx;
  height: 135rpx;
}
.class-box .class-item view {
  text-align: center;
  font-size: 26rpx;
  color: #333;
}
.release-bar {
  text-align: center;
  padding: 30rpx 0;
  font-size: 40rpx;
  color: #ff6000;
  margin: 20rpx 0;
  background-color: #fff;
}