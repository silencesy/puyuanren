/* pages/orderconfim/orderconfim.wxss */
page {
  background-color: #eee;
}
.addr {
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  margin-top: 20rpx;
}
.addr-text {
  font-size: 32rpxx;
}
.user-info {
  font-size: 26rpx;
  padding-top: 10rpx;
}
.right image {
  width: 60rpx;
  height: 60rpx;
  margin-top: 10rpx;
}
.goods-container {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.goods-container image {
  width: 100rpx;
  height: 100rpx;
  background-color: red;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.goods-container image:nth-child(6n) {
  margin-right: 0;
}
.postage-container {
  background-color: #fff;
  display: flex;
  padding: 20rpx;
  margin-top: 20rpx;
  justify-content: space-between;
  font-size: 32rpx;
}
.bottom-row {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 111;
  display: flex;
  justify-content: space-between;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.bottom-row view {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
}
.bottom-row view:nth-child(1) {
  color: red;
}
.bottom-row view:nth-child(2) {
  background-color: red;
  color: #fff;
  padding: 0 40rpx;
}
.delivery-amount {
  color: red;
}
.add-adress {
  margin-top: 10rpx;
}